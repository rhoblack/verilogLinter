{
  "name": "Verilog-Linter Injection (Verilog)",
  "scopeName": "source.verilog.verilog-linter.injection",
  "injectionSelector": "L:source.verilog, L:source.systemverilog",
  "fileTypes": [
    "v",
    "vh",
    "vl"
  ],
  "patterns": [
    {
      "include": "#system-tf"
    },
    {
      "include": "#v-control"
    },
    {
      "include": "#punctuation"
    },
    {
      "include": "#operators"
    }
  ],
  "repository": {
    "system-tf": {
      "match": "\\$[a-zA-Z0-9_$][a-zA-Z0-9_$]*\\b",
      "name": "entity.name.tag.verilog"
    },
    "v-control": {
      "match": "\\b(always|initial|if|else|case|casex|casez|default|endcase|for|forever|repeat|while|assign|deassign|force|release|wait|module|endmodule|task|endtask|function|endfunction|primitive|endprimitive|begin|end|fork|join|posedge|negedge|edge|input|output|inout|parameter|localparam|reg|wire|integer|real|time)\\b",
      "name": "keyword.control.verilog"
    },
    "punctuation": {
      "patterns": [
        {
          "match": ";",
          "name": "keyword.operator.terminator.verilog"
        },
        {
          "match": ",",
          "name": "keyword.operator.separator.verilog"
        },
        {
          "match": "\\(|\\)|\\[|\\]|\\{|\\}",
          "name": "keyword.operator.punctuation.verilog"
        }
      ]
    },
    "operators": {
      "match": "==|!=|<=|>=|<|>|=|\\+|\\-|\\*|/|%|&|\\||\\^|~|!|\\?|:|\\.",
      "name": "keyword.operator.verilog"
    }
  }
}