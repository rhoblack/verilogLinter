{
  "name": "Verilog-Linter Injection (SystemVerilog)",
  "scopeName": "source.systemverilog.verilog-linter.injection",
  "injectionSelector": "L:source.verilog, L:source.systemverilog",
  "fileTypes": [
    "v",
    "vh",
    "sv",
    "svh"
  ],
  "patterns": [
    {
      "include": "#system-tf"
    },
    {
      "include": "#sv-control"
    },
    {
      "include": "#sv-control-block"
    },
    {
      "include": "#storage-scope"
    },
    {
      "include": "#punctuation"
    },
    {
      "include": "#operators"
    }
  ],
  "repository": {
    "system-tf": {
      "match": "\\$[a-zA-Z0-9_$][a-zA-Z0-9_$]*\\b",
      "name": "entity.name.tag.systemverilog"
    },
    "sv-control": {
      "match": "\\b(initial|always|always_comb|always_ff|always_latch|final|if|else|case|casex|casez|default|endcase|return|break|continue|for|foreach|while|assign|deassign|force|release|wait|forever|repeat|module|endmodule|interface|endinterface|program|endprogram|package|endpackage|class|endclass|task|endtask|function|endfunction|primitive|endprimitive|modport|clocking|endclocking|generate|endgenerate|bind|posedge|negedge|edge)\\b",
      "name": "keyword.control.systemverilog"
    },
    "sv-control-block": {
      "match": "\\b(begin|end|fork|join|join_any|join_none)\\b",
      "name": "keyword.control.block.systemverilog"
    },
    "storage-scope": {
      "match": "\\b(static|automatic|local|protected|virtual|extern|pure|const|rand|randc|input|output|inout|ref)\\b",
      "name": "storage.modifier.systemverilog"
    },
    "punctuation": {
      "patterns": [
        {
          "match": ";",
          "name": "keyword.operator.terminator.systemverilog"
        },
        {
          "match": ",",
          "name": "keyword.operator.separator.systemverilog"
        },
        {
          "match": "\\(|\\)|\\[|\\]|\\{|\\}",
          "name": "keyword.operator.punctuation.systemverilog"
        }
      ]
    },
    "operators": {
      "match": "==|!=|<=|>=|<|>|=|\\+|\\-|\\*|/|%|&|\\||\\^|~|!|\\?|:|\\.|::",
      "name": "keyword.operator.systemverilog"
    }
  }
}
