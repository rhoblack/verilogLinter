{
    "comments": {
        "lineComment": "//",
        "blockComment": [ "/*", "*/" ]
    },
    "brackets": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["begin", "end"],
        ["module", "endmodule"],
        ["class", "endclass"],
        ["task", "endtask"],
        ["function", "endfunction"],
        ["case", "endcase"],
        ["generate", "endgenerate"],
        ["interface", "endinterface"],
        ["package", "endpackage"],
        ["program", "endprogram"],
        ["property", "endproperty"],
        ["sequence", "endsequence"],
        ["clocking", "endclocking"],
        ["covergroup", "endgroup"]
    ],
    "colorizedBracketPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["begin", "end"],
        ["module", "endmodule"],
        ["class", "endclass"],
        ["task", "endtask"],
        ["function", "endfunction"],
        ["case", "endcase"]
